<h3> Images for sharing </h3>
<hr/>
<div id ="issues_display">
  <table class="table table-striped table-hover">	
    <tr>
      <th>Image Id</th>
      <th>Image</th>
      <th>display</th>
      <th>Delete</th>
    </tr>
    <% @shares.each do |share| %> 
      <tr>
        <td><%= share.id %></td>
        <td><%= image_tag(share.image.url(:thumb)) %></td>
        <td><%= link_to 'Delete', share_path(share.id), :method => :delete %></td>
        <td><%= link_to "show", share %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= link_to "New Image for share", new_share_path, :class => "btn btn-primary" %>
