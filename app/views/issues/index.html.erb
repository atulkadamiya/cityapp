
<span id = "flash"><%= flash[:notice] %></span>
<h3> Issues </h3>
<hr/>
<div id ="issues_display">
  <table class="table table-striped table-hover">	
    <tr>
      <th>Issue Id</th>
      <th>Name</th>
      <th>Publisher</th>
      <th>Issue date</th>
      <th>Delete</th>
    </tr>
    <% @issues.each do |issue| %> 
      <tr>
        <td><%= issue.id %></td>
        <td><%=link_to issue.name, issue %></td>
        <td><%= issue.publisher %></td>
        <td><%= issue.issue_date %></td>
        <td><%= link_to 'Delete', issue_path(issue.id), :method => :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= link_to "Create New Issue", new_issue_path, :class => "btn btn-primary" %>
<%= link_to "New Image for share", new_share_path, :class => "btn btn-primary" %>
<%= link_to "All shared Images", shares_path, :class => "btn btn-primary" %>
