<%= flash[:notice] %>

<%= form_for @user, :url => { :action => "save_detail" } do |u| %>

<fieldset>
 <legend>Enter User Details</legend>
 <table>
  <tr>
   <div>
    <td>   <%= u.label :email %></td>
    <td>   <%= u.text_field :email, size: 30 %> </td>
    <td>
      <% if @user.errors[:email].any? %>
       <div class = "field_with_errors">
        <%= @user.errors[:email].join(",") %>
       </div>
      <% end %>
    </td>
   </div>
  </tr>
  <tr>
    <td colspan ="2">  <%= u.submit %> </td>
  </tr>
 </table>

</fieldset>
<% end %>